<%- include('./partials/header.ejs') %> 
<%- include('./partials/navbarhome.ejs') %> 
<body>
    <div class="container">
        <hr>
        <div class="jumbotron">
            <h1 class="display-4">Blog de desenvolvimento</h1>
            <p class="lead">Esta é uma unidade simples de um componente para chamar atenção para a informação.</p>
            <hr class="my-4">
            <p>It uses utility classes for typography and spacing to space content out within the larger container.</p>
            <a class="btn btn-primary btn-lg" href="#" role="button">Learn more</a>
          </div>
          <hr>
        <% articles.forEach(article => { %>
            <div class="card">
                <div class="card-header">
                    <h2><%= article.title %> </h2>
                </div>
                <div class="card-body">
                    <a class="btn btn-success" href="/<%= article.slug %>">Ler mais...</a>
                </div>
            </div>
            <br>
        <% }) %>

        <div class="row">
            <div class="col col-12">
                <a style="float:right" href="/articles/page/2">NEXT >>></a>
            </div>
            <hr>
        </div>
    </div>
</body>

